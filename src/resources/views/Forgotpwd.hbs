    <div class="wrapper"> 
      <div>
              <i class="fas fa-lock" ></i>
            </div>
        <div class="title-text">
           
            <div class="title forgot">
                Forgot Password
            </div>
        </div>
      <div class="form-container">
        <div class="form-inner">
          <form action="http://localhost:2000/Login" id="forgot" target="_self" method="post">
            <!--Forgot Password-->
            <div class="field">
                <div>
                    Email
                </div>
              <input
                type="text"
                placeholder="Your Email"
                required
              >
            </div>
           
            <div class="field btn">
              <div class="btn-layer btn btn-primary"></div>
              <input onclick="changepwd()" type="submit" value="Sent me a password reset link!" >
            </div>
             <div class=" pass-link">
              <span> Remember your password?</span>
              <a href="/users/Login" >Login</a>
            </div>
          </form>
        </div>
      </div>
    </div>
   
