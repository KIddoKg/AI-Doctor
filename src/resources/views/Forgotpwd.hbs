

    <meta charset="UTF-8" /> 
     <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forgot Password</title>
    <link rel="stylesheet" href="/css/formstyle.css" />
     <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />

  <body>
    <div class="wrapper">
        <div class="title-text">
            <div class="title forgot">
                Change Password
            </div>
        </div>
      <div class="form-container">
        <div class="form-inner">
          <form action="http://localhost:2000/Login" id="forgot" target="_self" method="post">
            <!--Forgot Password-->
            <div class="field">
              <input
                type="text"
                placeholder="Confirm Code From Your Email"
                required
              >
            </div>
            <div class="field">
              <input type="password" placeholder="New Password" id="password" class="form-control" name="password" required>
            </div>
            <div class="field">
              <input type="password" placeholder="Confirm Password" id="confirmPassword" class="form-control" name="confirmPassword" required>
            </div>
            <div class="field btn">
              <div class="btn-layer btn btn-primary"></div>
              <input onclick="changepwd()" type="submit" value="Change Password" >
            </div>
          </form>
        </div>
      </div>
    </div>
   
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert-dev.js"></script>
  </body>

