
  
    <title>Forgot Password</title>
    <link rel="stylesheet" href="/css/forgot&renewpwd.css" />

  <body>
    <div class="wrapper">
      <div class="icon">
              <i class="fas fa-lock"></i>
            </div>
        <div class="title-text">
            
            <div class="title forgot">
                Reset Password
            </div>
        </div>
      <div class="form-container">
        <div class="form-inner">
          <form action="" method="POST">
            <!--Reset Password-->
         <div class="form-group">
              <label for="password">Password</label>
              <input
                type="password"
                id="password"
                name="password"
                class="form-control"
                placeholder="Create Password"
            
              />
            </div>
            <div class="form-group">
              <label for="password2">Confirm Password</label>
              <input
                type="password"
                id="password2"
                name="password2"
                class="form-control"
                placeholder="Confirm Password">
            </div>
         
            <div class="field btn">
              <div class="btn-layer btn btn-primary"></div>
              <button type="submit" class="btn" >Sent me a password reset link!</button>
            </div>
             <div class=" pass-link">
              <span> Remember your password?</span>
              <a href="/users/Login" >Login</a>
            </div>
          </form>
        </div>
      </div>
    </div>
   
